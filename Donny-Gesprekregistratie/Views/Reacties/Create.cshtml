@model Donny_Gesprekregistratie.Models.Reactie

@{
    ViewData["Title"] = "Reactie Plaatsen";
}

<div class="col-lg-6">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Inhoud" class="control-label"></label>
            <input asp-for="Inhoud" class="form-control" />
            <span asp-validation-for="Inhoud" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="GesprekId" class="form-control" type="hidden" value="@ViewBag.GesprekId" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-controller="Gespreks" asp-action="Index">Back to List</a>
    </div>
</div>
<script src="~/js/tinymce/tinymce.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        tinymce.init({
            selector: '#Inhoud'
        });
    </script>
}